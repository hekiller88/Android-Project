<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "TextStyle" parent = "@android:style/TextAppearance">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:textSize">25sp</item>
        <item name = "android:padding">10dp</item>
        <item name = "android:gravity">center</item>
    </style>

    <style name = "LabelStyle" parent = "TextStyle">
        <item name = "android:background">@color/lightBlue</item>
        <item name = "android:width">220dp</item>
        <item name = "android:textColor">#000000</item>
        <item name = "android:layout_margin">10dp</item>
        <item name = "android:layout_gravity">center_vertical</item>
    </style>

    <style name = "InputStyle" parent = "TextStyle">
        <item name = "android:width">100dp</item>
        <item name = "android:singleLine">true</item>
        <item name = "android:scrollHorizontally">true</item>
        <item name = "android:textColor">#000000</item>
        <item name = "android:inputType">number</item>
        <item name = "android:background">@color/lightGray</item>
        <item name = "android:layout_margin">10dp</item>
        <item name = "android:layout_gravity">center_vertical</item>
    </style>

    <style name = "OutputStyel" parent = "TextStyle">
        <item name = "android:layout_height">fill_parent</item>
        <item name = "android:background">@color/lightBlue</item>
        <item name = "android:minWidth">120dp</item>
        <item name = "android:layout_marginLeft">10dp</item>
        <item name = "android:layout_marginRight">10dp</item>
    </style>

    <style name = "ButtonStyle" parent = "TextStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:background">@color/darkBlue</item>
        <item name = "android:textColor">#FF0000</item>
    </style>

    <style name = "ToggleStyle" parent = "TextStyle">
        <item name = "android:background">#FFFFFF</item>
        <item name = "android:textColor">@color/lightBlue</item>
        <item name = "android:minWidth">120dp</item>
        <item name = "android:layout_marginLeft">10dp</item>
        <item name = "android:layout_marginRight">10dp</item>
    </style>

    <style name = "SwitchStyle" parent = "TextStyle">
        <item name = "android:background">#FFFFFF</item>
        <item name = "android:textColor">#FF0000</item>
        <item name = "android:minWidth">120dp</item>
        <item name = "android:layout_marginLeft">10dp</item>
        <item name = "android:layout_marginRight">10dp</item>
    </style>

    <style name = "SpinnerStyle" parent = "TextStyle">
        <item name = "android:background">#FFFFFF</item>
        <item name = "android:textColor">#FF0000</item>
        <item name = "android:minWidth">120dp</item>
        <item name = "android:layout_marginLeft">10dp</item>
        <item name = "android:layout_marginRight">10dp</item>
    </style>

    <style name = "SeekBarStyle" parent = "TextStyle">
        <item name = "android:minWidth">100dp</item>
        <item name = "android:layout_margin">10dp</item>
        <item name = "android:layout_gravity">center</item>
    </style>

</resources>
